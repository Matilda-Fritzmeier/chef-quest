<div class="container">
  <h1 class="caterers-title">LIST OF ALL THE CATERERS AVAILABLE</h1>
  <div class='row' id='caterer-cards'>
    <% @caterers.each do |caterer| %>

      <div class='col-4'>
        <%= link_to caterer_path(caterer), class: 'text-decoration-none' do %>
          <div class="card mb-3">
            <%= caterer.user.first_name %>
          </div>
        <% end %>
      </div>

    <% end %>


  </div>
</div>

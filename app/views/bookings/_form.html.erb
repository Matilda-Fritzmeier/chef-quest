<%= simple_form_for([caterer, booking])
# , data: {
  # popup_target: "form",
  # action: "submit->popup#fire"
# }
do |f| %>
  <%= f.input :date %>
  <%= f.input :location %>
  <%= f.input :start_hour,
            as: :string,
            input_html: { data: { controller: "timepicker" } } %>
  <%= f.input :end_hour,
            as: :string,
            input_html: { data: { controller: "timepicker" } } %>
  <%= f.input :guests_count %>
  <%= f.submit "Create a booking", class: "btn-flat"%>
<% end %>
